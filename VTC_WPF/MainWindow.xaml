                    <Image Grid.Row="1" Grid.Column="13" Margin="5" Source="{iconPacks:MaterialImage Kind=ArrowRightBoldBox}" Visibility="{Binding BLINKER_RECHTS, Converter={StaticResource blinker_right_visibility}}"/>



