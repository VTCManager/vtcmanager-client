<Window x:Class="VTC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTC_WPF"
        mc:Ignorable="d"
        xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges"
        Title="MainWindow" Height="600" Width="1200">
    <Window.Resources>
        <local:App x:Key="Geschwindigkeit" />
    </Window.Resources>
    <Grid Margin="-2,0,298,25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="263*"/>
            <ColumnDefinition Width="475*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="90" Margin="67,70,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1"/>
        <Label x:Name="RPM_lbl" HorizontalContentAlignment="Center" Margin="393,136,69,372" Content="RPM_Label" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="image" HorizontalAlignment="Left" Height="37" Margin="193,21,0,0" VerticalAlignment="Top" Width="40" Source="Resources/bremse_schwarz.png" Grid.Column="1"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="37" Margin="238,21,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-autobatterie-80.png" Grid.Column="1"/>
        <Image x:Name="image_Copy1" HorizontalAlignment="Left" Height="37" Margin="285,21,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-motor-128.png" Grid.Column="1"/>
        <Image x:Name="image_Copy2" HorizontalAlignment="Left" Height="37" Margin="335,21,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-druck-96.png" Grid.Column="1"/>
        <Label x:Name="speed_label_tacho" Content="000" Margin="78,72,310,0" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="34" Height="61" FontFamily="Segoe UI Black" FontStyle="Italic" RenderTransformOrigin="0.5,0.5" Grid.Column="1">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-12.463"/>
                    <RotateTransform/>
                    <TranslateTransform X="-5.81"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label x:Name="label1" Content="KM/H" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="127,113,0,0" VerticalAlignment="Top" FontSize="24" Height="42" Width="83" Grid.Column="1"/>
        <Ellipse HorizontalAlignment="Left" Height="80" StrokeThickness="10" Margin="312,74,0,0" Stroke="Red" VerticalAlignment="Top" Width="78" Grid.Column="1"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="90" Margin="309,70,0,0" VerticalAlignment="Top" Width="200" Grid.Column="1">

        </Border>
        <Label x:Name="Speed_Limit_Label" Content="000" Margin="315,86,185,398" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" FontFamily="Segoe UI Black" FontSize="30" Grid.Column="1"/>
        <Image x:Name="Speed_Limiter_Image" HorizontalAlignment="Left" Height="26" Margin="415,71,0,0" VerticalAlignment="Top" Width="29" Source="Resources/icons8-tacho-96.png" Grid.Column="1"/>
        <Label x:Name="Speed_Limiter_Setting" Content="Speed_Limit" HorizontalAlignment="Left" Margin="444,71,0,0" VerticalAlignment="Top" Height="26" Width="69" Grid.Column="1"/>
        <Label x:Name="Gang_Label" Content="1" HorizontalAlignment="Left" Margin="402,75,0,0" VerticalAlignment="Top" FontSize="48" FontFamily="Segoe UI Black" RenderTransformOrigin="0.5,0.5" Height="74" Width="111" Grid.Column="1" VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-9.462"/>
                    <RotateTransform/>
                    <TranslateTransform X="-6.167"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <GroupBox x:Name="groupBox" Header="Verkehr" HorizontalAlignment="Left" Height="324" Margin="9,13,0,0" VerticalAlignment="Top" Width="297" FontSize="16"/>



    </Grid>
</Window>
