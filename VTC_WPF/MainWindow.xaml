                    <Rectangle Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="18" x:Name="RUECKSPIEGEL_OBEN" VerticalAlignment="Top" Height="300" RadiusX="50" RadiusY="50" StrokeThickness="10" Opacity="0.6" Visibility="Visible" Grid.RowSpan="7">
