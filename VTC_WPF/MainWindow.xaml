<mah:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTCManager"
        xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:Object="clr-namespace:SCSSdkClient.Object;assembly=SCSSdkClient" xmlns:Klassen="clr-namespace:VTCManager.Klassen"
        xmlns:SCSSdkClient="clr-namespace:SCSSdkClient;assembly=SCSSdkClient" x:Class="VTCManager.MainWindow"
        mc:Ignorable="d"
        GlowBrush="Gold"
        BorderThickness="0"
        SaveWindowPosition="True"
        Title="VTC-Manager V3" Height="600" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="VTCManager.png">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>

        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>

        <mah:WindowCommands>
            <Button Click="LaunchFaceBookSiteSite" ToolTip="Besuchen Sie uns auf unserer Facebook-Seite">
                <iconPacks:PackIconModern Width="22"
                                  Height="22"
                                  Kind="SocialFacebook" />
            </Button>
            <Button Click="LaunchDiscord" ToolTip="Besuchen Sie unseren Discord Server">
                <iconPacks:PackIconBoxIcons Width="22"
                                  Height="22"
                                  Kind="LogosDiscord" />
            </Button>
            <Button Click="LaunchWebsite" ToolTip="Besuchen Sie uns auf unserer Webseite">
                <iconPacks:PackIconSimpleIcons Width="22"
                                  Height="22"
                                  Kind="InternetExplorer" />
            </Button>

            <ComboBox Name="Sprachauswahl" 
                      Background="Transparent" 
                      Width="50" Height="25" 
                      BorderBrush="Gray" 
                      BorderThickness="1" 
                      HorizontalAlignment="Center" HorizontalContentAlignment="Center" 
                      SelectedValuePath="Content"
                      SelectionChanged="Sprachauswahl_SelectionChanged">
                <ComboBoxItem>DE</ComboBoxItem>
                <ComboBoxItem>EN</ComboBoxItem>
            </ComboBox>

        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>



    <Grid Margin="-2,0,1,1">

        <Grid VerticalAlignment="Top" Height="60" Background="Transparent">
            <TextBlock Text="VTC-Manager V3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontFamily="Segoe UI Black" >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2E2E2E" Offset="1"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF1B6BBB"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>



        </Grid>



        <Grid Width="200" HorizontalAlignment="Left"/>

        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="510" Margin="-2,58,-1,0" VerticalAlignment="Top" Width="1198" TabStripPlacement="Left">
            <TabItem x:Name="TAB_FAHRT" Height="45" Width="200" FontSize="24" Opacity="0.7" BorderBrush="Gray" VerticalAlignment="Center" BorderThickness="1">
                <Grid x:Name="GRID_FAHRT" Margin="0,0,0,66">
                    <Label Panel.ZIndex="250" Content="{Binding SPEED}" HorizontalAlignment="Left"  Margin="84,112,0,0" VerticalAlignment="Top" Height="61" Width="282" FontStyle="Italic" FontWeight="Bold" FontFamily="Verdana" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#DDC5C5C5">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="20" Color="#FF91DEFB" ShadowDepth="0"/>
                        </Label.Effect>
                    </Label>



                    <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="150" Width="300" BorderBrush="Orange" BorderThickness="2 6 11 0" CornerRadius="300 300 0 0" Margin="78,0,612,267" Background="#FF464646"/>

                    <Border Panel.ZIndex="210" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="80" Width="160" BorderBrush="red" BorderThickness="2 2 2 0" CornerRadius="300 300 0 0" Margin="78,0,612,267" Background="#FF464646">
                        <Border.Effect>
                            <DropShadowEffect Color="White" BlurRadius="50" ShadowDepth="1"/>
                        </Border.Effect>
                    </Border>

                    <Border Width="5" BorderBrush="red" BorderThickness="1" CornerRadius="120 120 0 0" RenderTransformOrigin="0.5 2" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="White" Margin="220,0,760,336">

                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="{Binding Content, ElementName=speed_fuer_tacho}"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Border.RenderTransform>
                    </Border>

                    <Label x:Name="speed_fuer_tacho" Content="{Binding SPEED_TACHO}" Visibility="Hidden" HorizontalAlignment="Left" Margin="439,137,0,0" VerticalAlignment="Top"/>


                    <StackPanel Orientation="Vertical" Margin="433,0,0,0">

                        <StackPanel Width="560" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label x:Name="LBL_Truck_Name" Padding="0" Margin="5" Height="30" Width="150" HorizontalAlignment="Right" HorizontalContentAlignment="Right"/>

                            <Label Padding="0" Margin="5" Content="{Binding HERSTELLER}" HorizontalContentAlignment="Left" Height="30" Width="459"/>
                        </StackPanel>
                        <Separator/>
                        <StackPanel Width="560" Orientation="Horizontal" HorizontalAlignment="Right">
                            <Label x:Name="LBL_Truck_Model" Padding="0" Margin="5" Height="30" Width="150" HorizontalAlignment="Right" HorizontalContentAlignment="Right"/>
                            <Label Padding="0" Margin="5" Content="{Binding MODELL}" Height="30" Width="459"/>
                        </StackPanel>
                        <Separator/>

                        <Label Content="{Binding START_ORT}" Height="30" />
                        <Label Content="{Binding START_FIRMA}" Height="30" />
                        <Label Content="{Binding ZIEL_ORT}" Height="30" />
                        <Label Content="{Binding ZIEL_FIRMA}" Height="30" />
                        <Label Content="{Binding SPIEL_PAUSE}" Height="30"/>
                    </StackPanel>


                    <Label Content="{Binding FUEL_MAX}" Padding="0" Height="20" FontSize="12" Margin="909,153,31,265" HorizontalContentAlignment="Center"/>
                    <Label Content="{Binding FUEL_BESTAND}" Padding="0" Width="50" Height="15" FontSize="12" Margin="910,400,30,18" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
                    <Label Content="{Binding LITER_GALLONEN}" Padding="0" FontSize="12" Width="50" Height="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" Margin="909,417,31,6"/>

                    <ProgressBar HorizontalAlignment="Left" Background="WhiteSmoke" Foreground="Green" Height="34" Margin="822,269,-58,0" VerticalAlignment="Top" Width="226" RenderTransformOrigin="0.5,0.5" Maximum="{Binding FUEL_MAX}" Value="{Binding FUEL_BESTAND}" Minimum="1">
                        <ProgressBar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ProgressBar.RenderTransform>
                    </ProgressBar>


                    <Label Visibility="Hidden" Content="{Binding ADBLUE_MAX}" Height="20" FontSize="12" Margin="861,153,81,265" HorizontalContentAlignment="Center"/>
                    <Label Visibility="Hidden" Content="{Binding ADBLUE_BESTAND}" Height="20" FontSize="12" Margin="861,408,81,10" HorizontalContentAlignment="Center"/>

                    <ProgressBar Visibility="Hidden" HorizontalAlignment="Left" Height="34" Margin="773,276,-9,0" Background="WhiteSmoke" Foreground="Blue" VerticalAlignment="Top" Width="225" RenderTransformOrigin="0.5,0.5" Maximum="{Binding ADBLUE_MAX}" Value="{Binding ADBLUE_BESTAND}" Minimum="1">
                        <ProgressBar.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-90"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </ProgressBar.RenderTransform>
                    </ProgressBar>

                    <StackPanel Margin="78,204,612,0" Orientation="Vertical">
                        <Label x:Name="LBL_FAHRT_SCHADEN_TITEL" Content="Schadensanzeige:" />

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_MOTOR" FontSize="14" Padding="0" Content="Motor: " VerticalContentAlignment="Center" Width="150" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRUCK_MOTOR_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_GETRIEBE" FontSize="14" Padding="0 " Content="Getriebe: " VerticalContentAlignment="Center" Width="150" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRUCK_GETRIEBE_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_FAHRWERK" FontSize="14" Padding="0" Content="Fahrwerk: " VerticalContentAlignment="Center" Width="150" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRUCK_FAHRWERK_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_FAHRERHAUS" FontSize="14" Padding="0" Content="Fahrerhaus: " VerticalContentAlignment="Center" Width="150" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRUCK_CHASSIS_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_RAEDER" FontSize="14" Padding="0" Content="Räder: " Width="150" VerticalContentAlignment="Center" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRUCK_RAEDER_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>

                        <Separator/>
                        <StackPanel Orientation="Horizontal">
                            <Label x:Name="TAB_FAHRT_LBL_FRACHTSCHADEN" FontSize="14" Padding="0" Content="Frachtschaden: " VerticalContentAlignment="Center" Width="150" Height="20" HorizontalContentAlignment="Right"/>
                            <Label FontSize="14" Padding="0" Content="{Binding TRAILER_FRACHT_SCHADEN}" VerticalContentAlignment="Center" HorizontalContentAlignment="Right" Width="30" Height="20"/>
                            <Label FontSize="14" Padding="0" Content="%" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>


                </Grid>
            </TabItem>
            <TabItem x:Name="TAB_FREUNDE" Content="" Height="50" Width="200" FontSize="24" Opacity="0.7" BorderBrush="Gray" VerticalAlignment="Center" BorderThickness="1"/>
            <TabItem x:Name="TAB_VERKEHR" Content="" FontSize="24" Height="50" Opacity="0.7" Width="200" BorderBrush="Gray" VerticalAlignment="Center" BorderThickness="1"/>
            <TabItem x:Name="TAB_EINSTELLUNGEN" FontSize="24" Height="50" Width="200" Opacity="0.7" BorderBrush="Gray" VerticalAlignment="Center" BorderThickness="1">
                <Grid Margin="-1,0,-1,-4">
                    <Label x:Name="label1" Content="Einstellungen" HorizontalAlignment="Left" Margin="2,-1,0,0" VerticalAlignment="Top" FontSize="24"/>
                    <TextBox x:Name="TMP_Pfad_Textbox" HorizontalAlignment="Left" Height="30" Margin="15,86,0,0" VerticalAlignment="Top" Width="257" FontSize="14" BorderBrush="#893341CF" AcceptsReturn="False" MaxLines="1" TextWrapping="NoWrap" mah:TextBoxHelper.Watermark="Kein TruckersMP Pfad angegeben !"/>
                    <Label x:Name="TMP_Pfad_Label" Content="Pfad zu Truckers-MP:" HorizontalAlignment="Left" Margin="15,59,0,0" VerticalAlignment="Top" FontSize="12"/>
                    <Button x:Name="BTN_Suche_TMP_PFAD" Content="..." HorizontalAlignment="Left" Margin="286,86,0,0" VerticalAlignment="Top" Width="46" Click="btn_open_TMP_File_Click"/>

                    <Label Content="Design Auswahl:" HorizontalAlignment="Left" Margin="477,59,0,0" VerticalAlignment="Top" FontSize="12"/>
                    <ComboBox x:Name="Designauswahl" Width="300" Height="30" Margin="476,85,216,393" 
                              SelectionChanged="Designauswahl_SelectionChanged" 
                              SelectedValuePath="Content">
                        <ComboBoxItem>Dark.Blue</ComboBoxItem>
                        <ComboBoxItem>Dark.Red</ComboBoxItem>
                        <ComboBoxItem>Dark.Green</ComboBoxItem>
                        <ComboBoxItem>Dark.Purple</ComboBoxItem>
                        <ComboBoxItem>Dark.Orange</ComboBoxItem>
                        <ComboBoxItem>Dark.Lime</ComboBoxItem>
                        <ComboBoxItem>Dark.Emerald</ComboBoxItem>
                        <ComboBoxItem>Dark.Teal</ComboBoxItem>
                        <ComboBoxItem>Dark.Cyan</ComboBoxItem>
                        <ComboBoxItem>Dark.Cobalt</ComboBoxItem>
                        <ComboBoxItem>Dark.Indigo</ComboBoxItem>
                        <ComboBoxItem>Dark.Violet</ComboBoxItem>
                        <ComboBoxItem>Dark.Pink</ComboBoxItem>
                        <ComboBoxItem>Dark.Magenta</ComboBoxItem>
                        <ComboBoxItem>Dark.Crimson</ComboBoxItem>
                        <ComboBoxItem>Dark.Amber</ComboBoxItem>
                        <ComboBoxItem>Dark.Yellow</ComboBoxItem>
                        <ComboBoxItem>Dark.Brown</ComboBoxItem>
                        <ComboBoxItem>Dark.Olive</ComboBoxItem>
                        <ComboBoxItem>Dark.Steel</ComboBoxItem>
                        <ComboBoxItem>Dark.Mauve</ComboBoxItem>
                        <ComboBoxItem>Dark.Taupe</ComboBoxItem>
                        <ComboBoxItem>Dark.Sienna</ComboBoxItem>
                        <ComboBoxItem>Light.Red</ComboBoxItem>
                        <ComboBoxItem>Light.Green</ComboBoxItem>
                        <ComboBoxItem>Light.Blue</ComboBoxItem>
                        <ComboBoxItem>Light.Purple</ComboBoxItem>
                        <ComboBoxItem>Light.Orange</ComboBoxItem>
                        <ComboBoxItem>Light.Lime</ComboBoxItem>
                        <ComboBoxItem>Light.Emerald</ComboBoxItem>
                        <ComboBoxItem>Light.Teal</ComboBoxItem>
                        <ComboBoxItem>Light.Cyan</ComboBoxItem>
                        <ComboBoxItem>Light.Cobalt</ComboBoxItem>
                        <ComboBoxItem>Light.Indigo</ComboBoxItem>
                        <ComboBoxItem>Light.Violet</ComboBoxItem>
                        <ComboBoxItem>Light.Pink</ComboBoxItem>
                        <ComboBoxItem>Light.Magenta</ComboBoxItem>
                        <ComboBoxItem>Light.Crimson</ComboBoxItem>
                        <ComboBoxItem>Light.Amber</ComboBoxItem>
                        <ComboBoxItem>Light.Yellow</ComboBoxItem>
                        <ComboBoxItem>Light.Brown</ComboBoxItem>
                        <ComboBoxItem>Light.Olive</ComboBoxItem>
                        <ComboBoxItem>Light.Steel</ComboBoxItem>
                        <ComboBoxItem>Light.Mauve</ComboBoxItem>
                        <ComboBoxItem>Light.Taupe</ComboBoxItem>
                        <ComboBoxItem>Light.Sienna</ComboBoxItem>
                    </ComboBox>
                    <TextBox x:Name="ETS2_Pfad_Textbox" HorizontalAlignment="Left" Height="30" Margin="15,132,0,0" VerticalAlignment="Top" Width="257" FontSize="14" BorderBrush="#893341CF" AcceptsReturn="False" MaxLines="1" TextWrapping="NoWrap" mah:TextBoxHelper.Watermark="Kein ETS2 Pfad angegeben !" mah:TextBoxHelper.WatermarkAlignment="Right" mah:TextBoxHelper.IsWaitingForData="True"/>
                    <Button x:Name="BTN_SUCHE_ETS" Content="..." HorizontalAlignment="Left" Margin="286,132,0,0" VerticalAlignment="Top" Width="46" Click="btn_open_suche_ets_pfad"/>

                    <TextBox x:Name="ATS_Pfad_Textbox" HorizontalAlignment="Left" Height="30" Margin="15,180,0,0" VerticalAlignment="Top" Width="257" FontSize="14" BorderBrush="#893341CF" AcceptsReturn="False" MaxLines="1" TextWrapping="NoWrap" mah:TextBoxHelper.Watermark="Kein ATS Pfad angegeben !" mah:TextBoxHelper.WatermarkAlignment="Right" mah:TextBoxHelper.IsWaitingForData="True"/>
                    <Button x:Name="BTN_SUCHE_ATS" Content="..." HorizontalAlignment="Left" Margin="286,180,0,0" VerticalAlignment="Top" Width="46" Click="btn_open_suche_ats_pfad"/>
                </Grid>


            </TabItem>




        </TabControl>

        <Button Height="47" Margin="205,502,790,21" Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}">
            <StackPanel Orientation="Horizontal">
                <Image Source="{iconPacks:BoxIconsImage Kind=SolidTruck}" Margin="0,0,10,0" Height="30" />
                <TextBlock x:Name="BUTTON_ETS_STARTEN" VerticalAlignment="Center">ETS Start</TextBlock>
            </StackPanel>
        </Button>
        <Button Height="46" Margin="805,502,190,22" Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}">
            <StackPanel Orientation="Horizontal">
                <Image Source="{iconPacks:BoxIconsImage Kind=SolidTruck}" Margin="0,0,10,0" Height="30" />
                <TextBlock x:Name="BUTTON_ATS_STARTEN" VerticalAlignment="Center">ATS Start</TextBlock>
            </StackPanel>
        </Button>

        <Button Height="47" Margin="505,502,490,21" Style="{DynamicResource MahApps.Styles.Button.Dialogs.Accent}">
            <StackPanel Orientation="Horizontal">
                <Image Source="{iconPacks:BoxIconsImage Kind=SolidTruck}" Margin="0,0,10,0" Height="30" />
                <TextBlock x:Name="BUTTON_TMP_STARTEN" VerticalAlignment="Center">TMP Start</TextBlock>
            </StackPanel>
        </Button>



    </Grid>

</mah:MetroWindow>
