                            <RadialGradientBrush>
                                <GradientStop Color="White" Offset="0"/>
                                <GradientStop Color="#FF646464" Offset="1"/>
                            </RadialGradientBrush>
                        </Rectangle.Fill>
                        <Rectangle.Stroke>
                            <ImageBrush ImageSource="340341_632_canny_pic.jpg"/>
