<Window x:Class="VTC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTC_WPF"
        mc:Ignorable="d"
        xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="VTC-Manager V3" Height="600" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="0fe05db00517d674af7072ce693d6459501620e8_full.jpg">
    <Window.Resources>

    </Window.Resources>



    <Grid Margin="-2,0,1,1">

        <Grid VerticalAlignment="Top" Height="60" Background="#FF2E2E2E">
            <TextBlock Text="VTC-Manager V3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontFamily="Segoe UI Black" >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2E2E2E" Offset="1"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF1B6BBB"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>



        </Grid>

        <StackPanel x:Name="MenuRightStack" Visibility="Hidden" Width="150" Height="500" Background="#FF2E2E2E" Margin="0, 50,0,0" HorizontalAlignment="Right">
            <Button x:Name="btn_Settings" Width="120" Height="30" Content="Einstellungen" HorizontalAlignment="Center" Margin="5" Click="btn_Settings_Click" />
            <Button x:Name="btn_Overlay" Width="120" Height="30" Content="Overlay" HorizontalAlignment="Center" Margin="5" Click="btn_Overlay_Click" />
            <Separator/>
            <Button x:Name="btn_Ueber" Width="120" Height="30" Content="Über uns..." HorizontalAlignment="Center" Margin="5" Click="btn_Ueber_Click" />
            <Separator/>


            <Button x:Name="btn_Logout" Width="120" Height="30" Content="Logout" HorizontalAlignment="Center" Margin="5" Click="btn_Logout_Click" />

        </StackPanel>

        <Grid Width="200" HorizontalAlignment="Left" Background="#FF2E2E2E">

        </Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="510" Margin="-2,58,-1,0" VerticalAlignment="Top" Width="1198" TabStripPlacement="Left">
            <TabItem Header="Fahrt" Height="50" Width="200" FontSize="24" Background="{x:Null}" Opacity="0.5">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="label" Content="Geschwindigkeit" HorizontalAlignment="Left" Margin="2,-1,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Background="{x:Null}" Content="" Height="50" Width="200" Header="Freunde" FontSize="24" Opacity="0.5"/>
            <TabItem Background="{x:Null}" Content="" FontSize="24" Height="50" Opacity="0.5" Width="200" Header="Verkehr"/>
            <TabItem Header="Einstellungen" FontSize="24" Height="50" Width="200" Background="{x:Null}" Opacity="0.5">
                <Grid Background="#FFE5E5E5" Margin="-1,0,-31,-262">
                    <Label x:Name="label1" Content="Einstellungen" HorizontalAlignment="Left" Margin="2,-1,0,0" VerticalAlignment="Top" FontSize="24"/>
                </Grid>
            </TabItem>
        </TabControl>

        <!--  LKW Image soll über dem Text stehen (muss ich noch Ingame machen -->
        <!-- Eventuell in Textform 'Du Fährst mit 12T Frischfleisch von Hamburg nach Franzosenland' oder sowas -->



    </Grid>
</Window>
