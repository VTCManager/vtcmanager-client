<Window x:Class="VTC_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTC_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:App x:Key="Geschwindigkeit" />
    </Window.Resources>
    <Grid>
        <Label x:Name="RPM_lbl" HorizontalContentAlignment="Center" Margin="243,97,439,279" FontSize="24" Content="RPM_Label" Width="110" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-73.823"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image x:Name="Truck_Image" HorizontalAlignment="Left" Source="Resources\truck-scania-png-5.png" Height="149" Margin="328,33,0,0" VerticalAlignment="Top" Width="150"/>
        <Rectangle HorizontalAlignment="Left" Height="205" Margin="478,20,0,0" Stroke="Black" VerticalAlignment="Top" Width="6" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-15"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                    <GradientStop Color="DarkGoldenrod" Offset="0" />
                    <GradientStop Color="LightGray" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle HorizontalAlignment="Left" Height="205" Margin="317,20,0,0" Stroke="Black" VerticalAlignment="Top" Width="6" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="15"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" >
                    <GradientStop Color="DarkGoldenrod" Offset="0" />
                    <GradientStop Color="LightGray" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image x:Name="image" HorizontalAlignment="Left" Height="37" Margin="309,187,0,0" VerticalAlignment="Top" Width="40" Source="Resources/bremse_schwarz.png"/>
        <Image x:Name="image_Copy" HorizontalAlignment="Left" Height="37" Margin="354,187,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-autobatterie-80.png"/>
        <Image x:Name="image_Copy1" HorizontalAlignment="Left" Height="37" Margin="401,187,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-motor-128.png"/>
        <Image x:Name="image_Copy2" HorizontalAlignment="Left" Height="37" Margin="451,187,0,0" VerticalAlignment="Top" Width="40" Source="Resources/icons8-druck-96.png"/>
        <Label x:Name="speed_lbl" HorizontalContentAlignment="Center" Margin="450,100,232,276" FontSize="24" Content="RPM_Label" Width="110" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="73.823"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

    </Grid>
</Window>
