<Window x:Class="VTCManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTCManager"
        mc:Ignorable="d"
        xmlns:dxga="http://schemas.devexpress.com/winfx/2008/xaml/gauges"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="VTC-Manager V3" Height="600" Width="1200" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Icon="0fe05db00517d674af7072ce693d6459501620e8_full.jpg">

    <Grid Margin="-2,0,1,1">
        <Grid VerticalAlignment="Top" Height="60" Background="#FF2E2E2E">
            <TextBlock Text="VTC-Manager V3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36" FontFamily="Segoe UI Black" >
                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2E2E2E" Offset="1"/>
                        <GradientStop Color="White" Offset="1"/>
                        <GradientStop Color="#FF1B6BBB"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>



        </Grid>

        <StackPanel x:Name="MenuRightStack" Visibility="Hidden" Width="150" Height="500" Background="#FF2E2E2E" Margin="0, 50,0,0" HorizontalAlignment="Right">
            <Button x:Name="btn_Settings" Width="120" Height="30" Content="Einstellungen" HorizontalAlignment="Center" Margin="5" Click="btn_Settings_Click" />
            <Button x:Name="btn_Overlay" Width="120" Height="30" Content="Overlay" HorizontalAlignment="Center" Margin="5" Click="btn_Overlay_Click" />
            <Separator/>
            <Button x:Name="btn_Ueber" Width="120" Height="30" Content="Über uns..." HorizontalAlignment="Center" Margin="5" Click="btn_Ueber_Click" />
            <Separator/>


            <Button x:Name="btn_Logout" Width="120" Height="30" Content="Logout" HorizontalAlignment="Center" Margin="5" Click="btn_Logout_Click" />

        </StackPanel>

        <Grid Width="200" HorizontalAlignment="Left" Background="#FF2E2E2E">

        </Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="510" Margin="-2,58,-1,0" VerticalAlignment="Top" Width="1198" TabStripPlacement="Left">
            <TabItem Header="Fahrt" Height="50" Width="200" FontSize="24" Background="{x:Null}" Opacity="0.5" Foreground="#FF4B9DFF" FontFamily="SF Movie Poster">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,66">
                    <Label Panel.ZIndex="250" x:Name="Speedlabel" Content="Speed" HorizontalAlignment="Left"  Margin="84,112,0,0" VerticalAlignment="Top" Height="61" Width="282" FontStyle="Italic" FontWeight="Bold" FontFamily="Verdana" FontSize="24" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#DDC5C5C5">
                        <Label.Effect>
                            <DropShadowEffect BlurRadius="20" Color="#FF91DEFB" ShadowDepth="0"/>
                        </Label.Effect>
                    </Label>


                    <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="150" Width="300" BorderBrush="Orange" BorderThickness="2 6 11 0" CornerRadius="300 300 0 0" Margin="78,0,612,267" Background="#FF464646">
                   
                    </Border>
                    
                    <Border Panel.ZIndex="210" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="80" Width="160" BorderBrush="red" BorderThickness="2 2 2 0" CornerRadius="300 300 0 0" Margin="78,0,612,267" Background="#FF464646">
                        <Border.Effect>
                            <DropShadowEffect Color="White" BlurRadius="50" ShadowDepth="1"/>
                        </Border.Effect>
                    </Border>
                    
                    <Border Width="5" BorderBrush="red" BorderThickness="1" CornerRadius="120 120 0 0" RenderTransformOrigin="0.5 2" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Center" Background="White" Margin="220,0,760,336">
                      
                        <Border.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="{Binding Content, ElementName=speed_fuer_tacho}"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Border.RenderTransform>
                    </Border>
                    <Label x:Name="Truck_Manufactur_Label" Content="Fahrzeug" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="18,220,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" Width="950"/>
                    <Label x:Name="Tour_Startort" Content="Streckeninfos 1" HorizontalAlignment="Left" Margin="20,260,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" Width="950" HorizontalContentAlignment="Center"/>
                    <Label x:Name="Label_Streckeninfos" Content="Streckeninfos 2" HorizontalAlignment="Left" Margin="20,300,0,0" VerticalAlignment="Top" Height="37" FontFamily="Bahnschrift Light" Width="950" HorizontalContentAlignment="Center"/>
                    <Label x:Name="Label_Streckeninfos_2" Content="Restzeit" HorizontalAlignment="Left" Margin="20,340,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" Width="950" HorizontalContentAlignment="Center"/>
                    <Label x:Name="Label_Fuel_Maximum" Content="Maximum" HorizontalAlignment="Left" Margin="644,28,0,0" VerticalAlignment="Top" FontFamily="Verdana" FontSize="10" Height="21" Width="55"/>
                    <Label x:Name="Label_Fuel_Current" Content="Current" HorizontalAlignment="Left" Margin="811,112,0,0" VerticalAlignment="Top" FontFamily="Verdana" FontSize="10"/>
                    <Label x:Name="speed_fuer_tacho" Content="Label" Visibility="Hidden" HorizontalAlignment="Left" Margin="439,137,0,0" VerticalAlignment="Top"/>
                    <!-- Kann das Truck Imaage nicht ändern im CodeBehind. Deshalb erstmal Deaktiviert -->
                    <!--<Image x:Name="Truck_Manufactur_Image" HorizontalAlignment="Left" Height="100" Margin="10,143,0,0" VerticalAlignment="Top" Width="100" Source="Icons/No_Truck.png"/> -->

                </Grid>
            </TabItem>
            <TabItem Background="{x:Null}" Content="" Height="50" Width="200" Header="Freunde" FontSize="24" Opacity="0.5" Foreground="#FF4B9DFF" FontFamily="SF Movie Poster"/>
            <TabItem Background="{x:Null}" Content="" FontSize="24" Height="50" Opacity="0.5" Width="200" Header="Verkehr" Foreground="#FF4B9DFF" FontFamily="SF Movie Poster"/>
            <TabItem Header="Einstellungen" FontSize="24" Height="50" Width="200" Background="{x:Null}" Opacity="0.5" Foreground="#FF4B9DFF" FontFamily="SF Movie Poster">
                <Grid Background="#FFE5E5E5" Margin="-1,0,-31,-262">
                    <Label x:Name="label1" Content="Einstellungen" HorizontalAlignment="Left" Margin="2,-1,0,0" VerticalAlignment="Top" FontSize="24"/>
                    <TextBox x:Name="TMP_Pfad_Textbox" HorizontalAlignment="Left" Height="33" Margin="15,86,0,0" VerticalAlignment="Top" Width="257" FontSize="12" BorderBrush="#893341CF" AcceptsReturn="False" MaxLines="1" TextWrapping="NoWrap"/>
                    <Label x:Name="TMP_Pfad_Label" Content="Pfad zu Truckers-MP:" HorizontalAlignment="Left" Margin="11,59,0,0" VerticalAlignment="Top" FontSize="12"/>
                    <Button x:Name="BTN_Suche_TMP_PFAD" Content="..." HorizontalAlignment="Left" Margin="286,86,0,0" VerticalAlignment="Top" Width="46" Click="btn_open_TMP_File_Click"/>
                </Grid>
            </TabItem>



        </TabControl>

        <Button x:Name="ETS2_Starten" Content="ETS2 Starten" Height="40" Width="150" Margin="530,509,515,10" />
        <Button x:Name="ATS_Starten" Content="ATS Starten" Height="40" Width="150" Margin="370,509,675,10" />
        <Button x:Name="TMP_Starten" Content="TMP Starten" Click="TMP_Starten_Click" Height="40" Width="150" Margin="210,509,835,10" />

    </Grid>
</Window>
